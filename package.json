{
  "name": "@jakeklassen/ecs",
  "version": "1.0.3",
  "description": "Entity Component System",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "benchmark": "ts-node --project tsconfig.benchmark.json",
    "docs": "typedoc --out docs --exclude \"**/*+(index|.test|.spec|.e2e).ts\" src/",
    "postdocs": "cp jekyll.config.yml docs/config.yml && touch docs/.nojekyll",
    "lint": "tslint --project .",
    "prebuild": "yarn run clean",
    "build": "yarn run lint && tsc --project tsconfig.json",
    "build:watch": "nodemon --exec 'yarn run build || exit 1'",
    "test": "jest",
    "pretest:coverage": "yarn run clean",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "version": "pika build"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.6.0",
    "@pika/plugin-build-web": "^0.6.0",
    "@pika/plugin-ts-standard-pkg": "^0.6.0",
    "@types/benchmark": "^1.0.31",
    "@types/jest": "^24.0.17",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.7.1",
    "benchmark": "^2.1.4",
    "jest": "^24.8.0",
    "lodash": "^4.17.15",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.16.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "typescript-tslint-plugin": "^0.5.4",
    "uglify-js": "^3.5.11"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "dependencies": {
    "bitset": "^5.0.5"
  }
}
