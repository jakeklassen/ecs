{
  "name": "@jakeklassen/ecs",
  "version": "2.3.8",
  "description": "Entity Component System",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "docs": "typedoc --out docs --exclude \"**/*+(index|.test|.spec|.e2e).ts\" src/",
    "postdocs": "cp jekyll.config.yml docs/config.yml && touch docs/.nojekyll",
    "lint": "eslint src --ext .js,.ts --config .eslintrc.cjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "gamedev",
    "game development",
    "entity component system",
    "typescript"
  ],
  "devDependencies": {
    "@types/benchmark": "^2.1.0",
    "@types/eslint": "^8.4.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^16.4.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "benchmark": "^2.1.4",
    "bitset": "^5.1.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.1",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.0",
    "ts-node": "^10.0.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4",
    "uglify-js": "^3.7.2",
    "vitest": "^0.10.2"
  },
  "dependencies": {
    "tsup": "^5.12.7"
  }
}
