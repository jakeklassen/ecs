{
  "name": "@jakeklassen/ecs",
  "version": "0.1.8",
  "description": "Entity Component System",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "tslint": "tslint --project .",
    "prebuild": "yarn run clean",
    "build": "yarn run tslint && tsc",
    "build:watch": "nodemon --exec 'yarn run build || exit 1'",
    "test": "jest",
    "pretest:coverage": "yarn run clean",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "pika": "./node_modules/.bin/pack"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@pika/pack": "^0.3.6",
    "@pika/plugin-build-node": "^0.3.14",
    "@pika/plugin-build-web": "^0.3.14",
    "@pika/plugin-ts-standard-pkg": "^0.3.14",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.2",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "prettier": "^1.16.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2",
    "typescript-tslint-plugin": "^0.3.0",
    "uglify-js": "^3.5.3"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  }
}
