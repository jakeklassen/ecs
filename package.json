{
  "name": "@jakeklassen/ecs",
  "version": "2.3.6",
  "description": "Entity Component System",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "benchmark": "ts-node --project tsconfig.benchmark.json",
    "docs": "typedoc --out docs --exclude \"**/*+(index|.test|.spec|.e2e).ts\" src/",
    "postdocs": "cp jekyll.config.yml docs/config.yml && touch docs/.nojekyll",
    "lint": "tslint --project .",
    "prebuild": "yarn run clean",
    "build": "yarn run lint && tsc --project tsconfig.json",
    "build:watch": "nodemon --exec 'yarn run build || exit 1'",
    "test": "jest",
    "pretest:coverage": "yarn run clean",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "version": "pika build"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "gamedev",
    "entity component system",
    "typescript"
  ],
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.8.1",
    "@pika/plugin-build-web": "^0.8.1",
    "@pika/plugin-ts-standard-pkg": "^0.8.1",
    "@types/benchmark": "^1.0.31",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.15",
    "benchmark": "^2.1.4",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.4",
    "typescript": "^3.7.3",
    "typescript-tslint-plugin": "^0.5.5",
    "uglify-js": "^3.7.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "./hooks/pre-commit.sh"
    }
  }
}
