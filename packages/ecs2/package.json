{
  "name": "@jakeklassen/ecs2",
  "version": "1.0.0",
  "description": "Entity Component System",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "lint": "eslint src --ext .js,.ts --config .eslintrc.cjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:only": "tsup ./src/index.ts --format cjs,esm",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "gamedev",
    "game development",
    "entity component system",
    "typescript"
  ],
  "devDependencies": {
    "@types/benchmark": "^2.1.2",
    "@types/eslint": "^8.21.2",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "benchmark": "^2.1.4",
    "bumpp": "9.0.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.6",
    "rimraf": "^4.4.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vite": "4.2.1",
    "vitest": "^0.29.7"
  },
  "dependencies": {
    "just-omit": "2.2.0",
    "type-fest": "3.6.1"
  }
}
