{
  "name": "@jakeklassen/ecs",
  "version": "4.0.3",
  "description": "Entity Component System",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "lint": "eslint src --ext .js,.ts --config .eslintrc.cjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "gamedev",
    "game development",
    "entity component system",
    "typescript"
  ],
  "devDependencies": {
    "@types/benchmark": "^2.1.3",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "benchmark": "^2.1.4",
    "bumpp": "9.2.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "4.4.9",
    "vitest": "^0.34.4"
  },
  "dependencies": {
    "tsup": "^7.2.0",
    "type-fest": "4.3.1"
  }
}
