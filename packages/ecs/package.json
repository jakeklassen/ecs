{
  "name": "@jakeklassen/ecs",
  "version": "3.0.0",
  "description": "Entity Component System",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "docs": "typedoc --out docs --exclude \"**/*+(index|.test|.spec|.e2e).ts\" src/",
    "postdocs": "cp jekyll.config.yml docs/config.yml && touch docs/.nojekyll",
    "lint": "eslint src --ext .js,.ts --config .eslintrc.cjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "gamedev",
    "game development",
    "entity component system",
    "typescript"
  ],
  "devDependencies": {
    "@types/benchmark": "^2.1.0",
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.9",
    "typescript": "^4.7.4",
    "vite": "3.0.4",
    "vitest": "^0.20.2"
  },
  "dependencies": {
    "tsup": "^6.2.1",
    "type-fest": "2.18.0"
  }
}
