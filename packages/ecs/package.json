{
  "name": "@jakeklassen/ecs",
  "version": "4.0.7",
  "description": "Entity Component System",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" eslint.config.mjs",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\" eslint.config.mjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "check-exports": "attw --pack ."
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "gamedev",
    "game development",
    "entity component system",
    "typescript"
  ],
  "devDependencies": {
    "@arethetypeswrong/cli": "0.17.4",
    "@eslint/js": "9.23.0",
    "@types/benchmark": "2.1.5",
    "@types/eslint": "^9.6.1",
    "@types/eslint__eslintrc": "3.3.0",
    "@types/eslint__js": "9.14.0",
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "benchmark": "^2.1.4",
    "bumpp": "10.1.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-depend": "0.12.0",
    "eslint-plugin-prettier": "5.2.5",
    "globals": "16.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite": "6.2.7",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "tsup": "^8.4.0",
    "type-fest": "4.38.0"
  }
}