{
  "name": "@jakeklassen/ecs",
  "version": "3.0.2",
  "description": "Entity Component System",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/ecs.git"
  },
  "scripts": {
    "lint": "eslint src --ext .js,.ts --config .eslintrc.cjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "gamedev",
    "game development",
    "entity component system",
    "typescript"
  ],
  "devDependencies": {
    "@types/benchmark": "^2.1.2",
    "@types/eslint": "^8.4.6",
    "@types/node": "^18.7.20",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "benchmark": "^2.1.4",
    "bumpp": "8.2.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "3.1.3",
    "vitest": "^0.23.4"
  },
  "dependencies": {
    "tsup": "^6.2.3",
    "type-fest": "3.0.0"
  }
}
